# Apple Docs V2 Environment Configuration

# Required - API Keys
OPENAI_API_KEY=not-needed-for-v2            # Not used in V2 (text search only)
MEILI_MASTER_KEY=generate-with-openssl      # Run: openssl rand -hex 32

# Required for remote deployment only (not needed for local STDIO)
MCP_API_KEY=generate-with-openssl           # Run: openssl rand -hex 32

# Meilisearch Configuration
MEILI_HTTP_ADDR=http://localhost:7700       # Meilisearch URL (internal)
MEILI_SEARCH_KEY=                           # Auto-generated from master key
MEILI_ADMIN_KEY=                            # Auto-generated from master key

# MCP Server Configuration  
HTTP_PORT=8080                              # Port for HTTP wrapper (remote access)
ENABLE_HTTP_WRAPPER=true                    # HTTP endpoint enabled by default for Docker

# Optional Features
ENABLE_AUTO_RESCRAPE=false                  # Enable weekly auto-updates
KEEP_MARKDOWN_FILES=false                   # Keep source markdown files

# Docker Paths (don't change unless you know what you're doing)
MEILISEARCH_PATH=/data/meilisearch          # Meilisearch data directory
HASHES_PATH=/data/hashes                    # Document hash storage
DOCUMENTATION_PATH=/data/documentation      # Markdown files (if kept)
LOG_PATH=/data/logs                         # Application logs

# Indexing Configuration (optional)
MAX_FILE_SIZE_MB=10                         # Max file size before chunking
CHUNK_SIZE=51200                            # Chunk size in bytes (50KB)
CHUNK_OVERLAP=1024                          # Overlap between chunks (1KB)