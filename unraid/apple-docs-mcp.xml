<?xml version="1.0"?>
<Container version="2">
  <Name>apple-docs-mcp</Name>
  <Repository>ghcr.io/averyy/apple-developer-docs:latest</Repository>
  <Registry>https://github.com/averyy/apple-developer-docs/pkgs/container/apple-developer-docs</Registry>
  <Network>bridge</Network>
  <MyIP/>
  <Shell>bash</Shell>
  <Privileged>false</Privileged>
  <Support>https://github.com/averyy/apple-developer-docs/issues</Support>
  <Project>https://github.com/averyy/apple-developer-docs</Project>
  <Overview>Apple Developer Documentation MCP Server V2 - Ultra-fast search across 340,740+ Apple developer documentation pages. Features 95x faster search (sub-3ms), 360 frameworks with platform filtering, and MCP integration for AI assistants like Claude. Includes pre-indexed documentation for instant use.</Overview>
  <Category>Tools: Network:Web Productivity: Status:Stable</Category>
  <WebUI>http://[IP]:[PORT:8080]/health</WebUI>
  <TemplateURL>https://raw.githubusercontent.com/averyy/apple-developer-docs/main/unraid/apple-docs-mcp.xml</TemplateURL>
  <Icon>https://raw.githubusercontent.com/averyy/apple-developer-docs/main/unraid/assets/icon.png</Icon>
  <ExtraParams>--restart=unless-stopped</ExtraParams>
  <PostArgs/>
  <CPUset/>
  <DateInstalled></DateInstalled>
  <DonateText>If you find this useful, consider starring the GitHub repo!</DonateText>
  <DonateLink>https://github.com/averyy/apple-developer-docs</DonateLink>
  <Description>Apple Developer Documentation MCP Server V2 provides ultra-fast search capabilities across all Apple frameworks and platforms (iOS, macOS, tvOS, watchOS, visionOS). Features Meilisearch for 95x faster searches, 360 frameworks, smart relevance scoring, and automatic indexing on first run.</Description>
  
  <!-- Port Configuration -->
  <Config Name="MCP Server Port" Target="8080" Default="8080" Mode="tcp" Description="Port for MCP server HTTP endpoint (enabled by default)" Type="Port" Display="always" Required="true" Mask="false">8080</Config>
  
  <!-- Volume Mappings -->
  <Config Name="Meilisearch Database" Target="/data/meilisearch" Default="/mnt/cache/appdata/apple-docs-mcp/meilisearch" Mode="rw" Description="Meilisearch search database (auto-indexed on first run)" Type="Path" Display="always" Required="true" Mask="false">/mnt/cache/appdata/apple-docs-mcp/meilisearch</Config>
  
  <Config Name="Hash Storage" Target="/data/hashes" Default="/mnt/cache/appdata/apple-docs-mcp/hashes" Mode="rw" Description="Document hashes for incremental updates" Type="Path" Display="always" Required="true" Mask="false">/mnt/cache/appdata/apple-docs-mcp/hashes</Config>
  
  <Config Name="Documentation Storage" Target="/data/documentation" Default="/mnt/cache/appdata/apple-docs-mcp/documentation" Mode="rw" Description="Pre-scraped Apple documentation (included in image)" Type="Path" Display="advanced" Required="false" Mask="false">/mnt/cache/appdata/apple-docs-mcp/documentation</Config>
  
  <Config Name="Logs Directory" Target="/data/logs" Default="/mnt/cache/appdata/apple-docs-mcp/logs" Mode="rw" Description="Container logs for all services" Type="Path" Display="advanced" Required="true" Mask="false">/mnt/cache/appdata/apple-docs-mcp/logs</Config>
  
  <!-- Environment Variables -->
  
  <Config Name="Meilisearch Master Key" Target="MEILI_MASTER_KEY" Default="" Mode="" Description="REQUIRED - Master key for Meilisearch (generate with: openssl rand -hex 32)" Type="Variable" Display="always" Required="true" Mask="true"></Config>
  
  <Config Name="MCP API Key" Target="MCP_API_KEY" Default="" Mode="" Description="RECOMMENDED - Bearer token for remote access (generate with: openssl rand -hex 32)" Type="Variable" Display="always" Required="false" Mask="true"></Config>
  
  <Config Name="Enable Auto Rescrape" Target="ENABLE_AUTO_RESCRAPE" Default="false" Mode="" Description="Enable weekly automatic documentation updates (Sunday 1 AM)" Type="Variable" Display="advanced" Required="false" Mask="false">false</Config>
  
  <Config Name="Enable HTTP Wrapper" Target="ENABLE_HTTP_WRAPPER" Default="true" Mode="" Description="Enable HTTP endpoint for remote access (required for Claude)" Type="Variable" Display="advanced" Required="false" Mask="false">true</Config>
  
  <Config Name="Timezone" Target="TZ" Default="America/New_York" Mode="" Description="Timezone for scheduled updates (if enabled)" Type="Variable" Display="advanced" Required="false" Mask="false">America/New_York</Config>
  
  <!-- Internal Environment Variables -->
  <Config Name="HTTP Port" Target="HTTP_PORT" Default="8080" Mode="" Description="Internal HTTP port (should match container port)" Type="Variable" Display="never" Required="false" Mask="false">8080</Config>
  
  <Config Name="Meilisearch URL" Target="MEILI_HTTP_ADDR" Default="http://localhost:7700" Mode="" Description="Internal Meilisearch URL" Type="Variable" Display="never" Required="false" Mask="false">http://localhost:7700</Config>
  
  <Config Name="Documentation Path" Target="DOCUMENTATION_PATH" Default="/data/documentation" Mode="" Description="Internal documentation path" Type="Variable" Display="never" Required="false" Mask="false">/data/documentation</Config>
  
  <Config Name="Hashes Path" Target="HASHES_PATH" Default="/data/hashes" Mode="" Description="Internal hashes path" Type="Variable" Display="never" Required="false" Mask="false">/data/hashes</Config>
  
  <Config Name="Meilisearch Path" Target="MEILISEARCH_PATH" Default="/data/meilisearch" Mode="" Description="Internal Meilisearch path" Type="Variable" Display="never" Required="false" Mask="false">/data/meilisearch</Config>
  
  <!-- Labels -->
  <Config Name="Container ID" Target="container_id" Default="apple-docs-mcp" Mode="" Description="Internal container identifier" Type="Label" Display="advanced" Required="false" Mask="false">apple-docs-mcp</Config>
  
  <Config Name="Version" Target="version" Default="v2-latest" Mode="" Description="Container version" Type="Label" Display="advanced" Required="false" Mask="false">v2-latest</Config>
</Container>